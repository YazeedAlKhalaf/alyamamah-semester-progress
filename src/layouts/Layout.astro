---
import { Icon } from "astro-icon";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta
      name="description"
      content="Al Yamamah Semester Progress is a website made by one of its students to help them see the progress of the semester and search the semester events. It has cool filters feature in each schdule that makes it a click away to filter for vacations, etc..."
    />

    <script
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-0673NY4JV0"
    ></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-0673NY4JV0");
    </script>
  </head>
  <body>
    <div class="content">
      <slot />
    </div>

    <footer>
      <div class="social-links">
        <a
          aria-label="Twitter account icon for Al Yamamah Semester Progress"
          href="https://twitter.com/alyamamah_sp"
          target="_blank"
        >
          <Icon pack="ant-design" name="twitter-outlined" class="social-icon" />
        </a>
        <a
          aria-label="GitHub repository icon for Al Yamamah Semester Progress"
          href="https://github.com/YazeedAlKhalaf/alyamamah-semester-progress"
          target="_blank"
        >
          <Icon pack="ant-design" name="github-outlined" class="social-icon" />
        </a>
      </div>
      <p>
        Made with ❤️ by <a
          href="https://twitter.com/YazeedAlKhalaf"
          target="_blank">Yazeed AlKhalaf</a
        >
      </p>
    </footer>

    <style>
      :root {
        --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
        --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
        --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

        --color-text: hsl(12, 5%, 4%);
        --color-bg: hsl(10, 21%, 95%);
        --color-border: hsl(17, 24%, 90%);
      }

      html {
        font-family: system-ui, sans-serif;
        font-size: var(--font-size-base);
        color: var(--color-text);
        background-color: var(--color-bg);
        font-display: optional;
      }

      body {
        margin: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
    </style>

    <style is:global>
      h1 {
        font-size: var(--font-size-xl);
      }

      h2 {
        font-size: var(--font-size-lg);
      }

      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }

      footer {
        margin-top: 2rem;
        padding: 1rem;
        text-align: center;
        border-top: 1px solid var(--color-border);
      }

      footer > p > a {
        text-decoration: none;
        color: #f8933e;
      }

      footer > p > a:hover {
        color: #feb351;
      }

      .content {
        flex: 1;
      }

      .social-links {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
      }

      .social-icon {
        width: 35px;
        color: #000000;
        margin: 0px 5px;
      }

      .social-icon:hover {
        color: #f8933e;
      }
    </style>
  </body>
</html>
